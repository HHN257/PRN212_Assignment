@page
@model CandidateManagement_RazorPages.Pages.JobPosting.DeleteModel

@{
    ViewData["Title"] = "Delete Job Posting";
}

<h1 class="text-center mb-4">Delete Job Posting</h1>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Are you sure you want to delete this?</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3 fw-bold">
                @Html.DisplayNameFor(model => model.JobPosting.JobPostingTitle)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.JobPosting.JobPostingTitle)
            </dd>
            <dt class="col-sm-3 fw-bold">
                @Html.DisplayNameFor(model => model.JobPosting.Description)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.JobPosting.Description)
            </dd>
            <dt class="col-sm-3 fw-bold">
                @Html.DisplayNameFor(model => model.JobPosting.PostedDate)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.JobPosting.PostedDate)
            </dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <form method="post">
        <input type="hidden" asp-for="JobPosting.PostingId" />
        <button type="submit" class="btn btn-danger me-2">Delete</button>
        <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
