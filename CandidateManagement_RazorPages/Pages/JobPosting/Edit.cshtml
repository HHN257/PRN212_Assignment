@page
@model CandidateManagement_RazorPages.Pages.JobPosting.EditModel

@{
    ViewData["Title"] = "Edit Job Posting";
}

<h1 class="text-center mb-4">Edit Job Posting</h1>

<h4>Job Posting Details</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="JobPosting.PostingId" />

            <div class="form-group mb-3">
                <label asp-for="JobPosting.JobPostingTitle" class="form-label"></label>
                <input asp-for="JobPosting.JobPostingTitle" class="form-control" />
                <span asp-validation-for="JobPosting.JobPostingTitle" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="JobPosting.Description" class="form-label"></label>
                <textarea asp-for="JobPosting.Description" class="form-control"></textarea>
                <span asp-validation-for="JobPosting.Description" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="JobPosting.PostedDate" class="form-label"></label>
                <input asp-for="JobPosting.PostedDate" class="form-control" />
                <span asp-validation-for="JobPosting.PostedDate" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
