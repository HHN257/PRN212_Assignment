@page
@model CandidateManagement_RazorPages.Pages.CandidateManage.EditModel

@{
    ViewData["Title"] = "Edit Candidate Profile";
}

<h1 class="text-center mb-4">Edit Candidate Profile</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <h4 class="card-title text-center text-muted">Profile Information</h4>
                <hr />

                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <input type="hidden" asp-for="CandidateProfile.CandidateId" />

                    <div class="form-group mb-3">
                        <label asp-for="CandidateProfile.Fullname" class="control-label"></label>
                        <input asp-for="CandidateProfile.Fullname" class="form-control" />
                        <span asp-validation-for="CandidateProfile.Fullname" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="CandidateProfile.Birthday" class="control-label"></label>
                        <input asp-for="CandidateProfile.Birthday" type="date" class="form-control" />
                        <span asp-validation-for="CandidateProfile.Birthday" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="CandidateProfile.ProfileShortDescription" class="control-label"></label>
                        <textarea asp-for="CandidateProfile.ProfileShortDescription" class="form-control"></textarea>
                        <span asp-validation-for="CandidateProfile.ProfileShortDescription" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="CandidateProfile.ProfileUrl" class="control-label"></label>
                        <input asp-for="CandidateProfile.ProfileUrl" type="url" class="form-control" placeholder="https://example.com/profile" />
                        <span asp-validation-for="CandidateProfile.ProfileUrl" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="CandidateProfile.PostingId" class="control-label"></label>
                        <select asp-for="CandidateProfile.PostingId" class="form-control" asp-items="ViewBag.PostingId"></select>
                        <span asp-validation-for="CandidateProfile.PostingId" class="text-danger"></span>
                    </div>

                    <div class="form-group text-center mt-4">
                        <button type="submit" class="btn btn-primary px-4">Save</button>
                        <a asp-page="./Index" class="btn btn-secondary ms-2">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
