@page
@model CandidateManagement_RazorPages.Pages.CandidateManage.DeleteModel

@{
    ViewData["Title"] = "Delete Candidate Profile";
}

<h1 class="text-center mb-4">Delete Candidate Profile</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm border-danger">
            <div class="card-body">
                <h3 class="text-danger text-center">Are you sure you want to delete this profile?</h3>
                <h4 class="text-center text-muted">Candidate Details</h4>
                <hr />

                <dl class="row">
                    <dt class="col-sm-4 text-end fw-bold">
                        @Html.DisplayNameFor(model => model.CandidateProfile.Fullname)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.CandidateProfile.Fullname)
                    </dd>

                    <dt class="col-sm-4 text-end fw-bold">
                        @Html.DisplayNameFor(model => model.CandidateProfile.Birthday)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.CandidateProfile.Birthday)
                    </dd>

                    <dt class="col-sm-4 text-end fw-bold">
                        @Html.DisplayNameFor(model => model.CandidateProfile.ProfileShortDescription)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.CandidateProfile.ProfileShortDescription)
                    </dd>

                    <dt class="col-sm-4 text-end fw-bold">
                        @Html.DisplayNameFor(model => model.CandidateProfile.ProfileUrl)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.CandidateProfile.ProfileUrl)
                    </dd>

                    <dt class="col-sm-4 text-end fw-bold">
                        @Html.DisplayNameFor(model => model.CandidateProfile.Posting)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.CandidateProfile.PostingId)
                    </dd>
                </dl>

                <form method="post" class="text-center mt-4">
                    <input type="hidden" asp-for="CandidateProfile.CandidateId" />
                    <button type="submit" class="btn btn-danger px-4">Delete</button>
                    <a asp-page="./Index" class="btn btn-secondary ms-2">Back to List</a>
                </form>
            </div>
        </div>
    </div>
</div>
